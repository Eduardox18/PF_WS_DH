<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <environments default="development">
        
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED" >
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/transito?useSSL=true"/>
                <property name="username" value="transito"/>
                <property name="password" value="transitows"/>
                <property name="poolMaximumActiveConnections" value="50"/>
            </dataSource>
        </environment>
        
    </environments>
    
    <mappers>
        <mapper resource="mybatis/mappers/DictamenReporteMapper.xml"/>
        <mapper resource="mybatis/mappers/FotografiaMapper.xml"/>
        <mapper resource="mybatis/mappers/ReporteMapper.xml"/>
        <mapper resource="mybatis/mappers/UsuarioMapper.xml"/>
        <mapper resource="mybatis/mappers/ConductorMapper.xml"/>
        <mapper resource="mybatis/mappers/VehiculoMapper.xml"/>
    </mappers>
</configuration>
